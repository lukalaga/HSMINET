            <p>Minet</p>
            <div class="spinner">
                <div class="rect1">
                </div>
                <div class="rect2">
                </div>
                <div class="rect3">
                </div>
                <div class="rect4">
                </div>
                <div class="rect5">
                </div>
            </div>
        </div>
    </div>
    <div class="color-line"></div>

    <div class="login-container">
        <div class="row">
            @RenderBody()
        </div>
    </div>
    <script src="~/Homer/scripts/homer.js"></script>
</body>
@RenderSection("scripts", required: false)
</html>