    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <title>@ViewBag.Title | Minet</title>
    <link href="@Url.Content("~/Homer/bootstrap.min.css")" rel="stylesheet" type="text/css" />
