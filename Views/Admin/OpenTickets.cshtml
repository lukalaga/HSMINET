@model SingleModel
@{
    ViewData["Title"] = "Open Tickets";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="~/Scripts/dataTablesScripts/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Scripts/dataTablesScripts/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/dataTablesScripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTablesScripts/dataTables.bootstrap4.min.js"></script>

<div class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="hpanel hgreen">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                    </div>
                    Open Tickets
                </div>
                <div class="panel-body">

                    <table id="myTable" class="table table-striped table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Ticket #</th>
                                <th>Name</th>
                                <th>Reported</th>
                                <th>Extension</th>
                                <th>Floor</th>
                                <th>Department</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model.AssignedTickets)
                        {
                            <tr>
                                <td>@item.Incidence.Notifications_Id</td>
                                <td>@item.Incidence.Name</td>
                                <td>@item.Incidence.DateReported</td>
                                <td>@item.Incidence.Extension</td>
                                <td>@item.Incidence.Departmentfloor</td>
                                <td>@item.Incidence.Department</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            $('#myTable').dataTable({
                "processing": true,
                dom: "<'row'<'col-sm-4'l><'col-sm-4 text-center'B><'col-sm-4'f>>tp",
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                buttons: [
                    { extend: 'copy', className: 'btn-sm' },
                    { extend: 'csv', title: 'HRS Open Tickets', className: 'btn-sm' },
                    { extend: 'pdf', title: 'HRS Open Tickets', className: 'btn-sm' },
                    { extend: 'print', className: 'btn-sm' }
                ]
            });
        });
    </script>

}